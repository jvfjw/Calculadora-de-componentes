<Window x:Class="Gui_calculadora.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gui_calculadora"
        mc:Ignorable="d"
        Title="MainWindow" Height="768" Width="1378">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>


        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            
            
            <Grid Grid.Row="0" Background="AliceBlue">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
      
                <TextBlock Text="Calculadora Componentes" FontSize="48" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Row="0"/>
                <TextBlock Text="Selecione a PLACA" FontSize="20" HorizontalAlignment="left" VerticalAlignment="Bottom" Grid.Row="0" Margin="125,0,0,0"/>
                <TextBlock Text="Quantidade" FontSize="20" HorizontalAlignment="Right" VerticalAlignment="Bottom" Grid.Row="0" Margin="0,0,160,0"/>
                
                
                <StackPanel Grid.Row="1" HorizontalAlignment="Center" Orientation="Horizontal">


                    <ComboBox ItemsSource="{Binding Placas}" 
                  SelectedItem="{Binding PlacaSelecionada}"
                  DisplayMemberPath="Nome"
                  Width="250" Height="70" Margin="10" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                   
                    
                    <TextBox Grid.Row="1" Name="InputQuantidade" Text="{Binding FatorGlobal, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Right" Height="70" Width="250" Background="Transparent" Margin="10" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                </StackPanel>
                 
            </Grid>
            
            <Grid Grid.Row="1" Background="Green">
                <Button Content="Imprimir" FontSize="40" Click="Button_Click_1"/>
            </Grid>
        
        
        </Grid>


        <ListBox x:Name="Lista" ItemsSource="{Binding PlacaSelecionada.Componentes}" Grid.Column="1">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="5">
                        <TextBlock Text="{Binding Nome}" FontWeight="Bold"/>
                        <StackPanel Orientation="Horizontal">
                            <!-- <TextBlock Text="{Binding Quantidade}" Margin="0,0,10,0"/>-->
                            <TextBlock Text=" Quantidade:" Margin="0,0,10,0"/>
                            <TextBlock Text="{Binding QuantidadeFinal}" Margin="0,0,10,0"/>
                            <TextBlock Text=" Posição:" Margin="0,0,10,0"/>
                            <TextBlock Text="{Binding posicao}" Margin="0,0,10,0"/>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    
    
      


    </Grid>
</Window>
